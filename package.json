{
    "name": "react-news",
    "version": "1.0.0",
    "description": "Server side rendering project",
    "main": "build/bundle.js",
    "scripts": {
        "start": "node build/bundle.js",
        "build:prod": "rm -rf build && webpack --config webpack.server.js && webpack -p --config webpack.client.prod.js --mode production",
        "heroku-postbuild": "npm install && npm run build:prod",
        "webpack-prod": "webpack -p --progress --config webpack.client.prod.js --mode production",
        "dev": "npm run build-server && npm-run-all --parallel dev:*",
        "build-server": "webpack --config webpack.server.js",
        "dev:build-server": "webpack --config webpack.server.js --watch",
        "dev:build-client": "webpack --config webpack.client.js --watch",
        "dev:server": "nodemon --watch build --exec \"node build/bundle.js\"",
        "precommit": "pretty-quick --staged"
    },
    "author": "Shashank Mukherjee",
    "license": "ISC",
    "dependencies": {
        "@babel/core": "^7.10.1",
        "@babel/plugin-transform-regenerator": "^7.10.1",
        "@babel/preset-env": "^7.10.1",
        "@babel/preset-react": "^7.10.1",
        "@babel/runtime-corejs3": "^7.10.1",
        "axios": "^0.19.2",
        "compression": "^1.7.4",
        "core-js": "^3.6.5",
        "express": "^4.17.1",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-helmet": "^6.0.0",
        "react-redux": "^7.2.0",
        "react-router-config": "^5.1.1",
        "react-router-dom": "^5.2.0",
        "redux": "^4.0.5",
        "redux-thunk": "^2.3.0",
        "regenerator-runtime": "^0.13.5",
        "serialize-javascript": "^3.0.0"
    },
    "browserslist": [
        "last 2 version",
        ">1%",
        "not dead"
    ],
    "devDependencies": {
        "babel-loader": "^8.1.0",
        "compression-webpack-plugin": "^4.0.0",
        "copy-webpack-plugin": "^6.0.1",
        "css-loader": "^3.5.3",
        "file-loader": "^6.0.0",
        "mini-css-extract-plugin": "^0.9.0",
        "node-sass": "^4.14.1",
        "nodemon": "^2.0.4",
        "npm-run-all": "^4.1.5",
        "sass-loader": "^8.0.2",
        "style-loader": "^1.2.1",
        "terser-webpack-plugin": "^3.0.2",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.11",
        "webpack-dev-server": "^3.11.0",
        "webpack-merge": "^4.2.2",
        "webpack-node-externals": "^1.7.2"
    }
}
